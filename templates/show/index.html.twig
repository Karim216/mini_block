{% extends 'base.html.twig' %}

{% block title %}Détail de l'article{% endblock %}

{% block body %}
    <style>
        
    </style>

    <div class="container">
        <h1 class="title">{{article.title}}</h1>
        <div class="img-fluid">
            <img width="100%" src="{{article.image}}" alt="{{article.title}}" srcset="">
        </div>
        <div class="content">
            <p class="date">Ecrit le {{article.createdAt | date("d/m/y")}} à {{article.createdAt | date("H:i")}}</p>
            <p class="content text-justify">{{article.content}}</p>
        </div>
    </div>
{% endblock %}
