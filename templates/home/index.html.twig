{% extends 'base.html.twig' %}

{% block title %}Hi HomeController!{% endblock %}

{% block body %}
<style>
    .container > .row {
         margin: auto;
    }
</style>

<div class="container">
    <h1>Bienvenue sur la page d'accueil</h1>
    <div class="row">
        {% for article in articles %}
            <div class="card" style="width: 18rem;">
                <p class="date">Ecrit le {{article.createdAt | date("d/m/y")}} Ã  {{article.createdAt | date("H:i")}}</p>
                <img class="card-img-top" src="{{article.image}}" alt="{{article.title}}">
                <div class="card-body">
                    <h5 class="card-title">{{article.title}}</h5>
                    <a href="{{ path('show', {'id': article.id})}}" class="btn btn-primary">En savoir plus</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
